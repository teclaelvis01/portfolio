---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Porfolio Elvis Reyes" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="icon" type="image/svg+xml" href="/img/logo-elvis-light.png" />
		<meta name="generator" content={Astro.generator} />

		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;800;900&amp;display=swap"
		rel="stylesheet">
	<link
		href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,wght@0,400;0,500;0,700;1,400;1,500;1,700&amp;display=swap"
		rel="stylesheet">
	<link href="https://fonts.googleapis.com/css2?family=Oswald:wght@200;300;400;500;600;700&amp;display=swap"
		rel="stylesheet">
	<link href="https://fonts.googleapis.com/css2?family=Kaushan+Script&amp;display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
		--font-family: 'Inter', sans-serif;
		--font-family-extra: 'DM Sans', sans-serif;
		--font-family-oswald: 'Oswald', sans-serif;
		--font-family-kaushan: 'Kaushan Script', cursive;
	}
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
		background-color: rgb(37, 36, 57);
    	color: rgb(190, 189, 196);
	}
	h1, h2, h3, h4, h5, h6
	{
		font-weight:700;
		line-height: 1.2;
		font-family: var(--font-family-extra);
	}
	h1 { font-size: 45px; }
	h2 { font-size: 36px; }
	h3 { font-size: 30px; }
	h4 { font-size: 24px; }
	h5 { font-size: 20px; }
	h6 { font-size: 16px; }

	.blinking-cursor {
        width: 2px;
        height: 20px;
        background-color: #61dafb;
        animation: blink 1s step-start infinite;
    }

    @keyframes blink {
        50% {
            opacity: 0;
        }
    }

</style>
