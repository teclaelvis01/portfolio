---
import Layout from '@/layouts/Layout.astro';
import Card from '@/components/Card.astro';
import Header from '@/components/Header.astro';
import Image from 'astro/components/Image.astro';
import Code from '@/components/Code.astro';
---

<Layout title="Portfolio | Elvis Reyes">
	<Header />
	<main>
		<div class="container mx-auto">
			<div class="mx-4 lg:mx-24">
				<div class="min-h-screen flex flex-col lg:flex lg:flex-row gap-7 lg:gap-2 justify-center items-center">
					<div class="block w-full">
						<h3 class="flex justify-center items-center lg:block text-white text-5xl lg:text-[65px] font-medium text-gradient tracking-tight">
							Elvis Reyes
							<img class="w-[38px] -left-[7px] inline" src="/img/hi.svg" alt="Hi" >
						</h3>
						<span class="rounded text-gray-200 flex justify-center lg:block">
							<div class="inline text-gray-500">&lt;</div>Developer<div class="inline text-gray-500">/&gt;</div>
						</span>
						<p class="py-5">I'm a web developer based in Madrid, and I'm very proactive and dedicated to my work. </p>
						<div class="flex justify-center lg:block">
							<div  class="bg-purple rounded-xl px-7 py-3 inline-flex ">
								<a rel="noreferrer"  href="https://www.linkedin.com/in/teclaelvis01/" class="text-white text-lg font-semibold">
									Say Hello <img src="/img/send.svg" alt="link say hello" class="inline">
								</a>
							</div>
						</div>
					</div>
					<div class="block w-full">
						<!-- <div>
							<Image
							class="w-3/4 mx-auto transition-all"
							width={60}
							height={60}
							loading={"eager"}
							
							 src="/img/workspace-0.webp" alt="Developer" />
						</div> -->
						<Code />
					</div>
					
				</div>
			</div>
		</div>
		<!-- <h1 class="text-red-400">Welcome to <span class="text-gradient">Astro</span></h1> -->
	</main>
</Layout>

<style>
	
	
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	
</style>
